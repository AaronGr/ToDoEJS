<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% for(let i = 0; i < newListItem.length; i++) { %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="checkbox" value=<%= newListItem[i]._id %> onChange="this.form.submit()" >
                    <p><%= newListItem[i].name %></p>
                </div>
                <input type="hidden" name="listTitle" value="<%= listTitle %>">
            </form>
        <% } %>
        <form class="item" action="/" method="POST">
            <input type="text" name="newToDoItem" placeholder="New Item" />
            <button type="submit" name="listTitle" value=<%= listTitle %>>+</button>
        </form>
    </div>

<%- include("footer") -%>